with "config";

library project UtilAda_Core is
   Version := "@UTIL_VERSION@";
   Library_Dir := "lib";

   type Asm_Version_Type is ("none", "intrinsic", "x86");

   Asm_Version := "@UTIL_ASM_TYPE@";

   Library_Type : Config.Library_Type_Type := external ("UTIL_LIBRARY_TYPE", "static");

   for Source_Dirs use ("src/core",
                        "src/core/concurrent",
                        "src/core/concurrent/asm-" & Asm_Version,
                        "src/core/listeners",
                        "src/core/strings",
                        "src/core/texts");

   for Library_Name use "utilada_core";
   for Library_Kind use Library_Type;
   for Library_Version use "lib" & Project'Library_Name & ".so." & Version;

   for Library_Dir use "lib/" & Project'Library_Name & "/" & Project'Library_Kind;
   for Object_Dir use "obj/" & Project'Library_Name & "/" & Project'Library_Kind;

   package Builder  renames Config.Builder;
   package Compiler renames Config.Compiler;
   package Ide      renames Config.Ide;

   package Binder is
      for Default_Switches ("Ada") use Config.Binder'Default_Switches ("Ada") & ("-a");
   end Binder;

end UtilAda_Core;
