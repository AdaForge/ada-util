with "util";
with "util_config";

library project Util_Http_Curl is
   Version := "@UTIL_VERSION@";

   for Library_Name use "ada_util_curl";
   for Library_Dir use Util_Config.Libdir;
   for Library_Kind use "LIBRARY_TYPE";

   for Source_Dirs use (Util_Config.Includedir & "/util_curl");
   for Library_ALI_Dir use Util_Config.Alidir  & "/util_curl/";
   for Externally_Built use "true";

   package Linker is
      for Linker_Options use ("-lcurl");
   end Linker;
end Util_Http_Curl;
